<ul>
  <% userMessages.forEach(item => { %>
  <form action="/deleteMessagePost" method="POST">
    <li>
      <h2>Title: <%= item.title %></h2>
      <% if(locals.isClubMember || locals.isAdmin) { %>
      <h4>Date and Time: <%= item.date %></h4>
      <h4>Author: <%= item.author %></h4>
      <% } %>
      <p>Message: <%= item.message %></p>
      <% if (locals.isAdmin) { %> <% } %>
      <input
        type="hidden"
        name="message_id"
        value="<%= item.msg_id %>"
      />
    </li>
    <button>Delete message</button>
  </form>
  <% }) %>
</ul>
